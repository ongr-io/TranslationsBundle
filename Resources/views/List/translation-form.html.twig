<div id="translation-form-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="translation-action-title">Translation dialog</h4>
            </div>
            <div class="modal-body">
                <div id="translation-form-error" class="alert alert-danger alert-dismissible fade in" style="display: none;" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                    <h4>You got an error!</h4>
                    <p id="translation-form-error-message"></p>
                </div>
                <form name="Translation" id="translation-form" class="form-horizontal">
                    <input type="hidden" id="translation-id" value="" />
                    <div>
                        <label class="col-sm-3 control-label" for="translation_name">Messages</label>
                        <div class="col-sm-8" id="messages-container" style="margin-bottom: 40px">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Domain</label>
                        <div class="col-sm-9">
                            <span id="translation-domain-input" class="translation-info"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Key</label>
                        <div class="col-sm-9">
                            <span id="translation-name-input" class="translation-info"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="translation_name">Tags</label>
                        <div class="col-sm-8">
                            <div id="tags-container" class="pb-5">
                                <i id="tags-loader" class="fa fa-refresh fa-spin fa-2x fa-fw"></i>
                                <div class="checkbox"></div>
                                <a href="javascript:" id="select-all-tags">Select all</a>
                                <a href="javascript:" class="btn btn-xs btn-success" id="add-new-tag-show-form">Add
                                    new tag +</a>
                            </div>
                            <div class="form-group" id="add-new-tag-container" style="display: none;">
                                <div id="add-tag-div" class="btn-group col-sm-8">
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="add-new-tag-input"
                                               placeholder="Type to add new tag">
                                        <span id="add-new-tag" class="input-group-btn">
                                            <label class="btn btn-success" type="button">
                                                <i class="glyphicon glyphicon-plus"></i>
                                            </label>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="translation-description-input">Description</label>
                        <div class="col-sm-9">
                            <textarea id="translation-description-input" class="form-control" name="description"></textarea>
                        </div>
                    </div>
                </form>
                <div class="clearfix"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="translation-form-submit">Save changes</button>
            </div>
        </div>
    </div>
</div>