{% extends 'ONGRTranslationsBundle::layout.html.twig' %}

{% block content %}
    <div id="setting-list-error" class="alert alert-danger alert-dismissible fade in" style="display: none;" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <h4>You got an error!</h4>
        <p id="setting-list-error-message"></p>
    </div>
    <table id="translations" class="display table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Domain</th>
            <th>Key</th>
            {% for locale in locales %}
                <th class="locale-message-header">{{ locale }}</th>
            {% endfor %}
            <th style="width: 100px">Actions</th>
        </tr>
        </thead>
    </table>

    {% include 'ONGRTranslationsBundle:List:translation-form.html.twig' %}
    {% include 'ONGRTranslationsBundle:List:history-modal.html.twig' %}
    {% include 'ONGRTranslationsBundle:List:export-modal.html.twig' %}
    {% include 'ONGRTranslationsBundle:List:info-modal.html.twig' %}

{% endblock %}

{% block pre_javascripts %}
    <script type="text/javascript">
        var locales = {{ locales|json_encode|raw }};
        var tags = {{ tags|json_encode|raw }};
        var domains = {{ domains|json_encode|raw }};
    </script>
{% endblock %}

{% block footer_javascript %}{% endblock %}
